[Unit]
Description=Stunnel (<%= @name %>)
Documentation=man:stunnel(8)
After=syslog.target network.target

[Service]
Type=forking
GuessMainPID=no
PIDFile=<%= @pid %>
ExecStart=<%= @svc_bin %> <%= @config_file %>
KillMode=process
TimeoutStopSec=2
Restart=on-failure
RestartSec="<%= $systemd_auto_restart_seconds %>s"
OOMScoreAdjust=<%= $oom_score_adj %>

[Install]
WantedBy=multi-user.target
